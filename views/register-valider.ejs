<%- include('partials/head.ejs') -%>
<%- include('./partials/progress.ejs') -%>
<link rel="stylesheet" href="/stylesheets/auth.css">
<div class="container-fluid p-0 m-0">
  <div class="auth">
    <form action="/register/email/validation" method="POST" class="mx-400 w-100">
      <h1 class="text-left mb-3">CONFIRMER VOTRE EMAIL</h1>
      <hr>
      <div class="form-group">
        <label for="key">clé secrete</label>
        <input type="text" id="key" name="key" class="form-control" placeholder="Entrer vote clé secrete" required>
        <small class="form-text text-muted">Veuillez vérifier votre boîte de réception</small>
      </div>
      <button class="btn btn-lg btn-success btn-block mt-3 mb-3 font-s14" type="submit">Confirmer</button>
      <div>
        <% if(locals.msg) { %>
        <% if(locals.e && locals.e.length >2) { %>
        <hr>
        <div class="alert alert-dark mx-400" role="alert"><%= msg %></div>
        <% } else { %>
        <hr>
        <div class="alert alert-dark mx-400" role="alert"> <%= msg %> <a href="/login">se connecter</a></div>
        <% } %>
        <% } %>
      </div>
    </form>
  </div>
</div>
<script src="javascripts/validation.js" defer></script>
</body>

</html>