<%- include('partials/head.ejs') -%>
<%- include('./partials/progress.ejs') -%>
<div class="bcg">
  <%- include('partials/navbar') -%>
  <style>
    .search-form {
      background-color: #00000063;
      padding: 30px;
      border-radius: 5px;
    }

    .search-form i {
      color: #fff;
    }

    .search-form label {
      color: #fff;
    }

    .center-flex {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
  </style>
  <div class="jumbotron container-v50">
    <div class="container mb-0 py-5">
      <div class="row">
        <div class="col-md-6 center-flex mb-3">
          <h1 class="display-4 flipInX">BIENVENUE</h1>
          <p class="mb-5" style="color: #fff">
            Louage partout, tout le temps parce que votre voyage ne s’arrête pas,
            nous sommes toujours là pour vous.Notre service est simple et rapide.
            Il est facile de trouver vos voyages et des cartes geographique indéquantes.
          </p>
        </div>
        <div class="col-md-6">
          <form action="/voyages" class="search-form" method="POST">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="select-stations-i"><i class="fas fa-street-view"></i> DE</label>
                  <select class="custom-select" id="select-stations-i" name="nomstation"></select>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="select-stations-iv"><i class="fa fa-map-marker"></i> VERS</label>
                  <select class="custom-select" id="select-stations-iv" name="arrive"></select>
                </div>
              </div>
            </div>

            <div class="form-group position-relative">
              <i class="fa fa-calendar" style="color:#525252; position: absolute; left: 17px; bottom: 11px;"></i>
              <input type="date" class="form-control pl-5" name="date" placeholder="Entrer date">
            </div>

            <button type="submit" class="btn btn-success btn-block">rechercher</button>
          </form>
        </div>
        <!--/col-md-6-->
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') -%>