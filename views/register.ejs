<%- include('partials/head.ejs') -%>
<link rel="stylesheet" href="/stylesheets/auth.css">
<div class="container-fluid p-0 m-0">
  <div class="auth">
    <form action="/register" method="POST" class="form-signin mx-400 w-100">

      <h1 class="text-left mb-3">S'INSCRIRE</h1>
      <hr>
      <div class="form-group">
        <label for="email">adresse email</label>
        <input type="text" id="email" name="email" class="form-control mb-3" placeholder="Votre adresse email" required
          autofocus>
      </div>

      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="password" class="form-control" pattern="[A-Za-z0-9 #-]{6,}"
          title="Au minimul 6 letters : letters, nombres, charactere spéciaux : # _ -" placeholder="Votre mot de passe"
          required>
      </div>

      <button class="btn btn-lg btn-success btn-block mt-3 mb-3 font-s14" type="submit">cree un compte</button>
      <hr>
      <div>
        <p class="m-0">Vous avez déjà un compte ? <a href="/login" class="btn btn-link font-s14 p-1"> se connecter</a>
        </p>
        <div class="alert alert-dark mx-400" id="form-signin" role="alert">alter</div>

        <% if(locals.msg) { %>
        <div class="alert alert-dark mx-400" role="alert"> <%= msg %></div>
        <% } %>
      </div>
    </form>
  </div>
</div>
<script src="javascripts/validation.js" defer></script>
</body>
</html>