<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>
<div class="container-fluid py-6">
  <div class="container">
    <%- include('../navbar') -%>
    <form id="form-ajout-notif" class="form-general bg-light p-0 mb-3">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="sujet">Sujet</label>
            <input type="text" class="form-control" name="sujet" pattern="[a-zA-Z0-9% ]+" placeholder="Entrer sujet" required>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <label for="msg">Message</label>
            <textarea class="form-control" id="msg" name="msg" rows="7" placeholder="Entrer votre message"
              required></textarea>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-dark">Envoyer</button>
      <button type="reset" class="btn btn-danger">vider</button>
    </form>
    <div id="msg-notif"></div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/push.js@1.0.12/bin/push.min.js"></script>
<script src="/javascripts/pages/notification.js" defer></script>
