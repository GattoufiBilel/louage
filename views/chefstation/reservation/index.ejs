<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>
<div class="container-fluid py-6">
  <div class="container">
    <%- include('../navbar') -%>
    <% if(locals.reservations) { %>
    <div class="table-responsive mb-3">
      <table class="table" id="myTable">
        <thead>
          <tr>
            <th>station de depart</th>
            <th>station d'arrivé</th>
            <th>h° depart</th>
            <th>h° arrivée</th>
            <th>date depart</th>
            <th>n° reservées</th>
            <th>total</th>
            <th>etat</th>
          </tr>
        </thead>
        <tbody>
          <% reservations.forEach((u, i) => {  %>
          <tr>
            <td><%= nom_station %></td>
            <td><%= u.arrive %></td>
            <td><%= u.heure_depart %> h</td>
            <td><%= u.heure_arrive %> h</td>
            <td><%= u.date_depart %></td>
            <td><%= u.nb_place_reserver %></td>
            <td><%= u.total_prix_places %></td>
            <td>
              <span class="badge badge-dark"><%= u.etat_reservation %></span>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <button onclick="tableToExcel('myTable')" class="btn btn-dark"><i class="fas fa-file-excel"></i> Exporter en
      Excel</button>
    <% } %>
  </div>
</div>
<script src="/javascripts/alert.js"></script>
<script src="/javascripts/delete.js" defer></script>
<%- include('../../partials/footer.ejs') -%>